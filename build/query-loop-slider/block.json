{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "markhoney/query-loop-slider",
  "version": "0.1.0",
  "title": "Query Loop Slider",
  "category": "theme",
  "icon": "slides",
  "description": "A WordPress block that provides similar functionality to the Post Template, but displays posts in a slider/carousel format.",
  "example": {},
  "parent": [
    "core/query"
  ],
  "supports": {
    "align": true,
    "alignWide": true,
    "anchor": true,
    "ariaLabel": true,
    "reusable": false,
    "html": false,
    "layout": {
      "allowSwitching": false,
      "allowSizingOnChildren": false,
      "allowInheriting": false,
      "default": {
        "type": "constrained"
      }
    },
    "background": {
      "backgroundImage": true,
      "backgroundSize": true
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "color": {
      "gradients": true,
      "link": true,
      "background": true,
      "text": true
    },
    "dimensions": {
      "aspectRatio": true,
      "minHeight": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "fontFamily": true,
      "fontWeight": true,
      "fontStyle": true,
      "textTransform": true,
      "textDecoration": true,
      "letterSpacing": true
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "shadow": true,
    "interactivity": {
      "clientNavigation": true
    }
  },
  "attributes": {
    "slidesPerView": {
      "type": "number",
      "default": 1
    },
    "spaceBetween": {
      "type": "number",
      "default": 0
    },
    "autoplay": {
      "type": "boolean",
      "default": false
    },
    "autoplayDelay": {
      "type": "number",
      "default": 3000
    },
    "loop": {
      "type": "boolean",
      "default": true
    },
    "navigation": {
      "type": "boolean",
      "default": true
    },
    "pagination": {
      "type": "boolean",
      "default": true
    },
    "paginationType": {
      "type": "string",
      "default": "bullets",
      "enum": [
        "bullets",
        "fraction",
        "progressbar"
      ]
    },
    "speed": {
      "type": "number",
      "default": 300
    },
    "effect": {
      "type": "string",
      "default": "slide",
      "enum": [
        "slide",
        "fade",
        "cube",
        "coverflow",
        "flip"
      ]
    },
    "centeredSlides": {
      "type": "boolean",
      "default": false
    },
    "breakpoints": {
      "type": "object",
      "default": {
        "640": {
          "slidesPerView": 1
        },
        "768": {
          "slidesPerView": 2
        },
        "1024": {
          "slidesPerView": 3
        }
      }
    },
    "enableBreakpoints": {
      "type": "boolean",
      "default": false
    },
    "customParams": {
      "type": "string",
      "default": "{}"
    }
  },
  "textdomain": "query-loop-slider",
  "editorScript": "file:./index.js"
}